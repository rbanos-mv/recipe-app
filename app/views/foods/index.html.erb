<h1>Food list</h1>
<div class="column col-center">
  <div class="row row-right">
    <%= button_to "Add Food", new_food_path, method: :get %>
  </div>

  <hr/>
  <% unless @foods.empty? %>
    <table>
      <%= render 'thead' %>
      <tbody>
        <%= render @foods %>
      </tbody>
    </table>
  <% else %>
    <%= render html: '<p /><h1>You have no Foods in the database</h1>'.html_safe %>
  <% end %>
</div>
